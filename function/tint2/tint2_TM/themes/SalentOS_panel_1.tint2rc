# Panel
panel_items = LTSBC
panel_monitor = 1
panel_position = bottom center horizontal
panel_size = 90% 32
panel_margin = 0 0
panel_padding = 0 0 0
panel_dock = 0
wm_menu = 0
panel_layer = top
panel_background_id = 6

# Panel Autohide
autohide = 0
autohide_show_timeout = 0.3
autohide_hide_timeout = 2
autohide_height = 2
strut_policy = follow_size

#Launchers
launcher_icon_theme = Elefaenza-Blue
launcher_icon_theme_override = 0
launcher_item_app = /usr/share/applications/menu.desktop
launcher_item_app = /usr/share/applications/debian-installer-launcher.desktop
launcher_item_app = /usr/share/applications/firefox-esr.desktop
launcher_item_app = /usr/share/applications/Thunar.desktop
launcher_item_app = /usr/share/applications/lxterminal.desktop
launcher_item_app = /usr/share/applications/salentoscc.desktop
launcher_item_app = /usr/share/applications/styler.desktop
launcher_item_app = /usr/share/applications/shutdown.desktop
launcher_tooltip = 1

# Taskbar
taskbar_mode = single_desktop
taskbar_padding = 2 0 0
taskbar_background_id = 0
taskbar_active_background_id = 0

# Tasks
urgent_nb_of_blink = 8
task_icon = 0
task_text = 1
task_centered = 0
task_maximum_size = 150 10
task_padding = 6 2
task_background_id = 5
task_active_background_id = 2
task_urgent_background_id = 4
task_iconified_background_id = 3

# Task Icons
task_icon_asb = 90 0 0
task_active_icon_asb = 100 0 0
task_urgent_icon_asb = 100 0 0
task_iconified_icon_asb = 90 0 0

# Fonts
task_font = terminus 9
task_font_color = #fd971f 100
task_active_font_color = #e0e0e0 100
task_urgent_font_color = #FFFFFF 83
task_iconified_font_color = #a6e22e 100
font_shadow = 0

# System Tray
systray = 1
systray_padding = 5 4 5
systray_sort = ascending
systray_background_id = 3
systray_icon_size = 16
systray_icon_asb = 100 0 100

# Clock
time1_format = %H:%M
time1_font = terminus 9
#time2_format = %A %d %B
#time2_font = sans 6
clock_font_color = #000000 100
clock_padding = 5 0
clock_rclick_command = orage
clock_background_id = 2

# Tooltips
tooltip = 0
tooltip_padding = 2 2
tooltip_show_timeout = 0.7
tooltip_hide_timeout = 0.3
tooltip_background_id = 1
tooltip_font = sans 10
tooltip_font_color = #000000 80

# Mouse
mouse_middle = none
mouse_right = close
mouse_scroll_up = toggle
mouse_scroll_down = iconify

# Battery
battery = 0
battery_low_status = 10
battery_low_cmd = notify-send "battery low"
battery_hide = 100
bat1_font = DejaVu Sans bold 8
#bat2_font = sans 6
battery_font_color = #FFFFFF 100
battery_padding = 1 0
battery_background_id = 3
